<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:padding="8dp"
    android:background="@drawable/button_background_yellow"
    android:elevation="4dp">

    <ImageView
        android:id="@+id/action_close"  android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_circle"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/white"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_selection_count" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="01 selecionados"
        android:textColor="#2C2C2E"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/action_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/action_delete"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/background_circle"
        android:padding="12dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/cor_destaque" />

    <ImageView
        android:id="@+id/action_deselect_all" android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_circle"
        android:src="@drawable/ic_deselect"
        app:tint="@color/cor_destaque"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@id/action_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>