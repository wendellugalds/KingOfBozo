<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:text="@string/king_of_boz"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/bom_dia"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/text_app_title"
        app:layout_constraintTop_toBottomOf="@id/text_app_title" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="326dp"
        android:layout_height="247dp"
        android:layout_marginHorizontal="60dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo_king_of_boz"
        android:src="@drawable/logo_king_of_bozo"
        app:layout_constraintBottom_toTopOf="@+id/button_jogar_proximo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/button_jogar_proximo"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="42dp"
        android:background="@drawable/button_background_dark"
        android:drawableEnd="@drawable/ic_bluetooth_connected"
        android:drawablePadding="-60px"
        android:drawableTint="@color/cor_destaque"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="25dp"
        android:text="JOGAR PRÃ“XIMO"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_jogar_sozinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/button_jogar_sozinho"
        android:layout_width="364dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_background_dark"
        android:drawableStart="@drawable/ic_robot_2"
        android:drawablePadding="-60px"
        android:drawableTint="@color/cor_destaque"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:text="JOGAR SOZINHO"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_marcador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/button_marcador"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/background_card_2_destaque"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="MACADOR"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>