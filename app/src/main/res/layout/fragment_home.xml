<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/background"
    android:background="?attr/background"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/text_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:text="@string/king_of_boz"
        android:alpha="0.5"
        android:textColor="?attr/textFillColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/bom_dia"
        android:textColor="?attr/textFillColor"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/text_app_title"
        app:layout_constraintTop_toBottomOf="@id/text_app_title" />

    <ImageView
        android:id="@+id/image_logo_fundo"
        android:layout_width="326dp"
        android:layout_height="247dp"
        android:layout_marginHorizontal="60dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo_king_of_boz"
        app:tint="?attr/colorPrimary"
        android:src="@drawable/fundo_logo"
        app:layout_constraintBottom_toTopOf="@+id/button_jogar_proximo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_greeting" />

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="280dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="60dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/logo_king_of_boz"
        app:tint="?attr/textBackground"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="@+id/image_logo_fundo"
        app:layout_constraintEnd_toEndOf="@+id/image_logo_fundo"
        app:layout_constraintStart_toStartOf="@+id/image_logo_fundo"
        app:layout_constraintTop_toTopOf="@+id/image_logo_fundo" />

    <TextView
        android:id="@+id/button_jogar_proximo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="48dp"
        android:backgroundTint="?attr/cardBackgroundColor"
        android:background="@drawable/button_background_dark"
        android:drawableEnd="@drawable/ic_share_marker"
        android:drawablePadding="-60px"
        android:drawableTint="?attr/colorPrimary"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="25dp"
        android:text="COMPARTILHAR MARCADOR"
        android:textColor="?attr/textFillColor"
        app:layout_constraintBottom_toTopOf="@+id/button_marcador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

