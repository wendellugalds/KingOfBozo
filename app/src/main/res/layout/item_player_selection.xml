<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="?attr/colorPrimary"
    android:background="@drawable/item_background_selector">

    <View
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:backgroundTint="?attr/textBackground"
        android:background="@drawable/item_background_selector"
        android:alpha="0.2"/>

    <FrameLayout
        android:id="@+id/container_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/sigla_nome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="?attr/colorPrimary"
            android:background="@drawable/circle_background"
            android:text="WU"
            android:textColor="?attr/textBackground"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_player_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
            tools:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:textColor="?attr/textBackground"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/container_action"
        app:layout_constraintStart_toEndOf="@+id/container_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wendell Ugalds" />


    <FrameLayout
        android:id="@+id/container_action"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/checkbox_select_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:buttonTint="?attr/textBackground"
            android:clickable="false"
            android:button="@drawable/checkbox_selector_numbered" />

        <ImageView
            android:id="@+id/image_selection_icon_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            app:tint="?attr/textBackground"
            tools:src="@drawable/ic_1"
            tools:visibility="visible" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
