<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/mobile_navigation" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/nav_container"
            android:layout_width="308dp"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:backgroundTint="?attr/cardBackgroundColor"
            android:background="@drawable/background_card_dark"
            android:gravity="center">

            <!-- Home -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="4dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/nav_home_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="?attr/textFillColor"
                    android:src="@drawable/ic_home" />
                <TextView
                    android:id="@+id/nav_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/title_home"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Players -->
            <LinearLayout
                android:id="@+id/nav_players"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="4dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/nav_players_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="?attr/textFillColor"
                    android:src="@drawable/ic_players" />
                <TextView
                    android:id="@+id/nav_players_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/title_players"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Saved Games -->
            <LinearLayout
                android:id="@+id/nav_saved_games"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="4dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/nav_saved_games_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="?attr/textFillColor"
                    android:src="@drawable/ic_game" />
                <TextView
                    android:id="@+id/nav_saved_games_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/title_saved_games"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/nav_settings"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginHorizontal="4dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/nav_settings_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="?attr/textFillColor"
                    android:src="@drawable/ic_settings" />
                <TextView
                    android:id="@+id/nav_settings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/title_settings"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>