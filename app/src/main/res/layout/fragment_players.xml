<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background"
    android:paddingTop="5dp"
    android:id="@+id/contrai"
    tools:context=".ui.players.PlayersFragment">

    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/action_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center_horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                tools:ignore="MissingConstraints"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/king_of_boz"
                    android:alpha="0.5"
                    android:textColor="?attr/textFillColor"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_title_jogadores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="JOGADORES"
                    android:textColor="?attr/textFillColor"
                    android:textSize="24sp"
                    android:textStyle="bold"/>


            </FrameLayout>

            <TextView
                android:id="@+id/text_player_count"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end|center"
                android:backgroundTint="?attr/colorPrimary"
                android:background="@drawable/background_circle"
                android:text="00"
                android:textColor="?attr/textBackground"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/person_select"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="?attr/textBackground"
                android:background="@drawable/background_circle"
                android:src="@drawable/ic_person_check"
                app:tint="?attr/colorPrimary"
                android:padding="12dp"
                app:layout_constraintEnd_toStartOf="@id/action_delete"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </LinearLayout>



        <include
            android:id="@+id/custom_toolbar"
            layout="@layout/toolbar_select_gamers"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:visibility="gone"
            tools:visibility="invisible"/>

    </FrameLayout>

    <TextView
        android:id="@+id/button_adicionar_jogador"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="?attr/colorPrimary"
        android:background="@drawable/background_card_2_destaque"
        android:gravity="top|center"
        android:paddingTop="25dp"
        android:text="ADICIONAR JOGADOR"
        android:elevation="1dp"
        android:textColor="?attr/textBackground"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_players"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="180dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_container"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_player_gamers" />

</androidx.constraintlayout.widget.ConstraintLayout>