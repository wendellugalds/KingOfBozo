<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numbers_points"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card_2_destaque_numbers"
    android:orientation="vertical"
    android:paddingVertical="16dp"
    android:paddingHorizontal="16dp"
    app:layout_constraintTop_toBottomOf="@+id/action_bar"
    tools:layout_editor_absoluteX="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/background_card_dark_numbers">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoring_title"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:paddingLeft="16dp"
                android:text="SENA"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/button_cancel"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/background_circle_black"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="@android:color/white"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2">

            <ImageView
                android:id="@+id/btn_nulo"
                android:layout_height="70dp"
                android:layout_width="0dp"
                android:background="@drawable/background_card_black"
                android:src="@drawable/ic_nulo"
                app:tint="@color/cor_destaque"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:padding="13dp"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/valor_01"
                android:layout_height="70dp"
                android:layout_width="0dp"
                android:background="@drawable/background_card_black"
                android:text="06"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/valor_02"
                android:layout_height="70dp"
                android:layout_width="0dp"
                android:background="@drawable/background_card_black"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/valor_03"
                android:layout_height="70dp"
                android:layout_width="0dp"
                android:background="@drawable/background_card_black"
                android:text="18"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/valor_04"
                android:layout_height="70dp"
                android:layout_width="0dp"
                android:background="@drawable/background_card_black"
                android:text="24"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/valor_05"
                android:layout_height="70dp"
                android:layout_width="0dp"
                android:background="@drawable/background_card_black"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="4dp"/>

            <TextView
                android:id="@+id/btn_riscar"
                android:layout_height="70dp"
                android:layout_width="0dp"
                android:background="@drawable/background_score_option_riscar"
                android:text="RISCAR"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_columnWeight="2"
                android:layout_gravity="fill"
                android:layout_margin="4dp"/>

        </GridLayout>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:columnCount="5"
        android:rowCount="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/background_score_option_riscar"
            android:src="@drawable/ic_dice_1"
            app:tint="@color/black"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/background_score_option_riscar"
            android:src="@drawable/ic_dice_1"
            app:tint="@color/black"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/background_score_option_riscar"
            android:src="@drawable/ic_dice_6"
            app:tint="@color/black"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/background_score_option_riscar"
            android:src="@drawable/ic_dice_1"
            app:tint="@color/black"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:visibility="invisible"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:background="@drawable/background_score_option_riscar"
            android:src="@drawable/ic_dice_1"
            app:tint="@color/black"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:visibility="invisible"/>

    </GridLayout>

</LinearLayout>